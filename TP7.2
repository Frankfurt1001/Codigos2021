int carga(char *p){
	int multiplicacion;
	for(int i = 0; i < 2 ;i++){
		p[i] = (1+rand()%9);
	}
	multiplicacion = (p[0]) * (p[1]);
	return multiplicacion;
}
	void pregunta(int a, char *p ){
		int resp;
		do{
			printf("Cual es el resultado de: ");
			printf("%d x %d\n", *p, *(p+=1));
			scanf("%d", &resp);
		}while(resp != a);
		printf("\n ¡Muy Bien!\n");
	}
		
