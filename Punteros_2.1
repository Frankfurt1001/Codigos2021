#include <stdio.h>
	void addone(int *p){
	(*p)++;//parentesis para desreferenciar primero
		p++;//aqui nos damos cuenta que son diferentes, al incrementar p
			printf("%p\n", (void*) p);
		
}
	void f( int a){
