#include <stdio.h>
#include <stdlib.h.>
/*La función calloc también devuelve el puntero a la primera
posición de memoria reservada, pero necesita dos
argumentos: la cantidad de elementos y, el tamaño de cada
elemento*/
int main(int argc, char *argv[]) {
	int n;
	int *p;
	printf("Ingrese cuantos elementos necesita: ");
	scanf("%d", &n);
	p = calloc(n, sizeof (int));
	for (int i = 0; i < n; i++)
		*(p+i) = i*i;//1*1, 2*2, 3*3, 4*4...... y asi sucesivamente
	for (int i = 0; i < n; i++)
		printf("%d ", *(p+i));
	free(p);
	return 0;
}

